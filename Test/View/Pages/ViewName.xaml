<UserControl x:Class="Test.View.Pages.ViewName"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:pages="clr-namespace:Test.ViewModel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance pages:ViewModelName}">
 


    <StackPanel>
            <TextBox Height="23"   Name="FirstName" Width="120">
                <TextBox.Text>
                    <Binding Path="FirstName" />
                </TextBox.Text>
            </TextBox>

    </StackPanel>
 
</UserControl>
